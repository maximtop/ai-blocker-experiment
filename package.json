{
  "name": "ai-adblocker-experiment",
  "version": "1.2.0",
  "description": "Extension for blocking unwanted content using llms",
  "license": "MIT",
  "author": "@maximtop",
  "scripts": {
    "build": "rollup -c",
    "postbuild": "cd dist && zip -r extension.zip . -x '*.DS_Store'",
    "clean": "rm -rf dist",
    "dev": "pnpm clean && pnpm build:watch",
    "lint": "npx eslint \"src/**/*.{js,ts}\" && pnpm type-check",
    "type-check": "tsc --noEmit",
    "test": "vitest run"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-json": "^6.0.1",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-swc": "^0.4.0",
    "@swc/core": "^1.11.24",
    "@types/chrome": "^0.0.326",
    "@types/node": "^24.9.1",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsdoc": "^60.6.0",
    "rollup": "^4.9.1",
    "rollup-plugin-copy": "^3.5.0",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3",
    "vitest": "^4.0.6"
  },
  "type": "module",
  "dependencies": {
    "date-fns": "^4.1.0",
    "nanoid": "^5.1.6",
    "valibot": "^1.1.0"
  }
}
